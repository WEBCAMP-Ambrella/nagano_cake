<% if customer_signed_in? %>
     <% if item.liked_by?(current_customer) %>
      <%= link_to customer_item_like_path(item), method: :delete, id: "like-button", remote: true do %>
          <i class="fas fa-heart"></i>
      <% end %>
    <% else %>
      <%= link_to customer_item_likes_path(item),method: :post,class:"btn btn-link", id: "like-button", remote: true do %>
        <h4 class="far fa-heart btn btn-link" aria-hidden="true"></h4>
      <% end %>
    <% end %>
<% else %>
  <i class="fas fa-heart"></i>
<% end %>

