<div class="row">
  <div class= "col-xl-7">
    <h4>注文情報入力</h4>

    <h5>支払方法</h5>


    <%= form_tag(confirm_customer_orders_path) do %>


      <%= radio_button_tag :payment, :銀行振込 %> 銀行振込
      <%= radio_button_tag :payment, :クレジットカード %> クレジットカード


    <h5>お届け先</h5>

      <%= radio_button_tag :shipping, 0 %> ご自身の住所<br/>
      <%= radio_button_tag :shipping, 1 %> 登録済住所から選択<br/>
      <%= collection_select(:exist_address, :address_id, current_customer.shipping_addresses, :id, :addressee) %><br/>

      <%= radio_button_tag :shipping, 2 %> 新しいお届け先<br/>

      <div class="form-row mb-3 ml-5">
        <div class="col">
          <label>宛名</label>
          <%= text_field_tag :new_addressee,'', placeholder:"宛名..", class:"form-control" %>
        </div>
      </div>
      <div class="form-row mb-5 ml-5">
        <div class="col">
          <label>郵便番号</label>
          <%= text_field_tag :new_shipping_postcode,'', placeholder:"郵便番号..", class:"form-control" %>
        </div>
        <div class="col-8">
          <label>ご住所</label>
          <%= text_field_tag :new_shipping_address, '', placeholder:"住所..", class:"form-control" %>
        </div>
      </div>


      <%= submit_tag '確認画面へ進む', class:"btn btn-block btn-outline-primary" %>
      <% end %>

  </div>
</div>