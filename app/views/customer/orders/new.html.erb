<div class="row">
  <div class= "col-xl-7">
    <div style="min-height: 8vh;">
      <h3>注文情報入力</h3>
    </div>

    <h5 class="mb-4">お支払方法</h5>


    <%= form_tag(confirm_customer_orders_path) do %>
<div class="form-group row">
    <div class="col btn-group btn-group-toggle ml-5" data-toggle="buttons">
      <label class="btn btn-outline-secondary" style="width:50%;">
      <%= radio_button_tag :payment, :銀行振込, true %>
      銀行振込</label>

      <label class="btn btn-outline-secondary" style="width: 50%;">
      <%= radio_button_tag :payment, :クレジットカード %>
      クレジットカード</label>
    </div>
  </div>


    <h5 class="my-4">お届け先</h5>

    <div class="mb-3">
      <%= radio_button_tag :shipping, 0 %> ご自身の住所
    </div>
    <div class="row mb-4 ml-5">
      <%= current_customer.family_name. + current_customer.first_name + "　" + "郵便番号" + current_customer.postal_code + "　" + current_customer.address %>
    </div>
    <div class="mb-3">
      <%= radio_button_tag :shipping, 1 %> 登録済住所から選択
    </div>
    <div class="form-row mb-4 ml-5">
      <div class="col">
        <%= collection_select(:exist_address, :address_id, current_customer.shipping_addresses, :id, :name_address, {}, class: "custom-select") %><br/>
      </div>
    </div>
    <div class="mb-3">
      <%= radio_button_tag :shipping, 2 %> 新しいお届け先<br/>
    </div>

      <div class="form-row mb-3 ml-5">
        <div class="col">
          <label>宛名</label>
          <%= text_field_tag :new_addressee,'', placeholder:"宛名..", class:"form-control" %>
        </div>
      </div>
      <div class="form-row mb-5 ml-5">
        <div class="col">
          <label>郵便番号</label>
          <%= text_field_tag :new_shipping_postcode,'', placeholder:"郵便番号..", class:"form-control" %>
        </div>
        <div class="col-8">
          <label>ご住所</label>
          <%= text_field_tag :new_shipping_address, '', placeholder:"住所..", class:"form-control" %>
        </div>
      </div>


      <%= submit_tag '確認画面へ進む>>', class:"btn btn-primary text-white px-3 badge-pill mr-3 float-right" %>
      <% end %>

  </div>
</div>