<h1>注文情報確認</h1>
<table class = "table table-striped">
	<thead>
		<tr>
			<th>商品</th>
			<th>単価</th>
		    <th>数量</th>
		    <th>小計</th>
		</tr>
	</thead>
	<tbody>
	　<%= @cart_items.each do |cart_item| %>
		<tr>
			<td><%= cart_item.item.name %></td>
			<td><%= cart_item.item.non_taxed_price %></td>
			<td><%= cart_item.quantity %></td>
			<td><%= cart_item.item.non_taxed_price.to_i * cart_item.quantity.to_i %></td>
		</tr>
	  <% end %>
	</tbody>
</table>




<h3>支払方法</h3>
<%= @order.payment %>


<h3>お届け先<h3>
