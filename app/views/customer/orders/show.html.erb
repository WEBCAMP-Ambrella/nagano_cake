<h1>注文履歴詳細</h1>
<p>注文情報</p>
<table class="table">
	<tbody>
		<tr>
			<th>注文日</th>
			<td><%= @order.created_at.to_s(:datetime_jp) %></td>
		</tr>
		<tr>
			<th>配送先</th>
			<td><%= @order.delivery_postcode + @order.delivery_address %></td>
		</tr>
		<tr>
			<th>支払い方法</th>
			<td><%= @order.payment %></td>

		</tr>
		<tr>
			<th>ステータス</th>
			<td><%= @order.order_status %></td>
		</tr>
	</tbody>
</table>

<table>
	<thead>
		<tr>
			<th>商品</th>
			<th>単価（税込）</th>
		    <th>数量</th>
		    <th>小計</th>
		</tr>
	</thead>
	<tbody>
		<% @order.order_items.each do |order_item| %>
		<tr>
			<td><%= order_item.name %></td>
			<td><%= order_item.price %></td>
			<td><%= order_item.quantity %></td>
			<td><%= (order_item.price.to_i * order_item.quantity.to_i).floor %></td>
		</tr>
		<% end %>
	</tbody>
</table>

<table>
	<tbody>
		<tr>
			<th>商品合計</th>
			<td><%= @order.total_price.to_i - @order.postage.to_i %></td>
		</tr>
		<tr>
			<th>配送料</th>
			<td><%= @order.postage %></td>
		</tr>
		<tr>
			<th>合計金額</th>
			<td><%= @order.total_price %></td>
		</tr>
	</tbody>
</table>