<h1>注文履歴詳細</h1>
<p>注文情報</p>
<%= @customers.each do |customer| %>
<table>
	<tbody>
	  <%= @customers.each do |customer| %>
		<tr>
			<th>注文日</th>
			<td><%= name %></td>
		</tr>
		<tr>
			<th>配送先</th>
			<td><%= customer.shipping_address.postalcode %></td>
		</tr>
		<tr>
			<th>支払い方法</th>
			<td><%= customer.order.payment %></td>

		</tr>
		<tr>
			<th>ステータス</th>
			<td><%= customer.order_status %></td>
		</tr>
      <% end %>
	</tbody>
</table>

<table>
	<thead>
		<tr>
			<th>商品</th>
			<th>単価</th>
		    <th>数量</th>
		    <th>小計</th>
		</tr>
	</thead>
	<tbody>
	　<%= @cart_items.each do |customer| %>
		<tr>
			<td><%= name %></td>
			<td><%= non_taxed_price *1.1 %></td>
			<td><%= quantity %></td>
			<td><%=　non_taxed_price *1.1 * quantity %></td>
		</tr>
	  <% end %>
	</tbody>
</table>

<table>
	<tbody>
	  <%= @customers.each do |customer| %>
		<tr>
			<th>商品合計</th>
			<td><%= customer.total_price %></td>
		</tr>
		<tr>
			<th>配送料</th>
			<td><%= customer.postage %></td>
		</tr>
		<tr>
			<th>合計金額</th>
			<td><%= customer.total_price + customer.postage %></td>
		</tr>
      <% end %>
	</tbody>
</table>