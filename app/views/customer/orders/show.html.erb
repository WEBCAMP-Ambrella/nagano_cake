

  <div class="card-header">
    <tr>
          <td>注文日</td>
          <td><%= @order.created_at.to_s(:datetime_jp) %></td>
         </tr>
     </div>

<div class="card-group">
  <div class="card">
    <div class="card-body">
      <h4 class="card-title">配送先</h4>
      <table class="card-text">
        <tr><%= @order.delivery_postcode %></tr><br>
      <tr><%= @order.delivery_address %></tr><br>
      <tr><%= @order.addressee %></tr>
     </table>
    </div>
  </div>

  <div class="card">
    <div class="card-body">
      <h4 class="card-title">支払い方法</h4>
      <table class="card-text"><%= @order.payment %><br>

</table>
    </div>
  </div>

  <div class="card">
    <div class="card-body">
      <h4 class="card-title">ステータス</h4>
      <table class="card-text">
        <%= @order.order_status %>
      </table>
</div>
</div>

</div>
</div>


<div class="text">
<h4>注文内容</h4>

<div class="container">
  <div class="row">
    <div class="col-md-2">
      <table class="border" width="1140" height="200">

          <tr class="top-tr">
            <th class="box">商品</th>
        <th class="box2">単価(税込)</th>
      <th class="box3">個数</th>
      <th class="box4">小計(税込)</th>
    </tr>
        <% @order.order_items.each do |order_item| %>
    <tr class="second-tr">
      <td class="text-center"><%= order_item.name %></td>
      <td class="text-right"><%= order_item.price %></td>
      <td class="text-right"><%= order_item.quantity %></td>
      <td class="text-right"><%= (order_item.price.to_i * order_item.quantity.to_i).floor %></td>
        </tr>
    <% end %>

  <tr>
    <td></td>
    <td></td>
    <td class="text-right">合計(税込):</td>
    <td class="box5"><%= (@order.total_price.to_i - 800).floor %></td>
  </tr>
  <tr>
    <td></td>
    <td></td>
    <td class="text-right">配送料:</td>
    <td class="box6">800</td>
  </tr>
  <tr>
    <td></td>
    <td></td>
    <td class="text-right"><h6>お支払い金額:</h6></td>
    <td class="box7"><h6><%= @order.total_price %></h6></td>
  </tr>
    </tbody>
   </table>

  </div>
   <div class="col-md-9">
   </div>

    </div>
  </div>


