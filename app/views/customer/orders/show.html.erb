<h1>注文履歴詳細</h1>
<p>注文情報</p>
<table>
	<tbody>
		<tr>
			<th>注文日</th>
			<td><%= @order.created.at %></td>
		</tr>
		<tr>
			<th>配送先</th>
			<td><%= @order.deliver %></td>
		</tr>
		<tr>
			<th>支払い方法</th>
			<td><%= @order.payment %></td>

		</tr>
		<tr>
			<th>ステータス</th>
			<td><%= @order_status %></td>
		</tr>
      <% end %>
	</tbody>
</table>

<table>
	<thead>
		<tr>
			<th>商品</th>
			<th>単価</th>
		    <th>数量</th>
		    <th>小計</th>
		</tr>
	</thead>
	<tbody>
		<tr>
			<td><%= @order.name %></td>
			<td><%= @order.non_taxed_price *1.1 %></td>
			<td><%= @order.quantity %></td>
			<td><%=　@order.non_taxed_price *1.1 * quantity %></td>
		</tr>
	  <% end %>
	</tbody>
</table>

<table>
	<tbody>
		<tr>
			<th>商品合計</th>
			<td><%= @order.total_price %></td>
		</tr>
		<tr>
			<th>配送料</th>
			<td><%= @order.postage %></td>
		</tr>
		<tr>
			<th>合計金額</th>
			<td><%= @order.total_price + @order.postage %></td>
		</tr>
      <% end %>
	</tbody>
</table>