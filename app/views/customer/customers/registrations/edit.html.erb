<div class="row">
  <div class= "col-xl-6">
    <div style="min-height: 8vh;">
      <h3 class="mb-3 mt-3">登録情報編集</h3>
    </div>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <div class="form-row">
        <div class="col mb-3">
          <%= f.label :family_name,"苗字" %><br />
          <%= f.text_field :family_name, autofocus: true, autocomplete: "family_name", class:"form-control" %>
        </div>
        <div class="col mb-3">
          <%= f.label :first_name, "名前" %><br />
          <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name", class:"form-control" %>
        </div>
      </div>

      <div class="form-row">
        <div class="col mb-3">
          <%= f.label :family_name_kana, "(セイ)" %><br />
          <%= f.text_field :family_name_kana, autofocus: true, autocomplete: "family_name_kana", class:"form-control" %>
        </div>
        <div class="col mb-3">
          <%= f.label :first_name_kana, "(メイ)" %><br />
          <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana", class:"form-control" %>
        </div>
      </div>

      <div class="form-row">
        <div class="col mb-3">
          <%= f.label :email, "メールアドレス" %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control" %>
        </div>
      </div>

      <div class="form-row">
        <div class="col mb-3">
          <%= f.label :postal_code, "郵便番号" %><small class="text-muted">(ハイフンなし)</small><br />
          <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code", class:"form-control" %>
        </div>
        <div class="col-8">
          <%= f.label :address, "住所" %><br />
          <%= f.text_field :address, autofocus: true, autocomplete: "address", class:"form-control" %>
        </div>
      </div>

      <div class="form-row">
        <div class="col mb-3">
          <%= f.label :phone_number, "電話番号" %><small class="text-muted">(ハイフンなし)</small><br />
          <%= f.text_field :phone_number, autofocus: true, autocomplete: "phone_number", class:"form-control" %>
        </div>
      </div>
      <div class="form-row">
        <div class="col mb-3 text-right">
          <%= f.submit "編集内容を保存する>>", class:"btn btn-primary text-white px-3 badge-pill" %>
        </div>
      </div>
      <% end %>

      <div class="form-row">
        <div class="col mb-3 text-left">
          <p><%= button_to "<<もどる", :back, method: :get, class:"btn btn-primary px-3 text-white badge-pill" %></p>
        </div>
        <div class="col mb-3 text-right">
          <p><%= button_to "退会する", cancel_customer_path, method: :get, class:"btn btn-secondary px-3 badge-pill" %></p>
        </div>
      </div>

  </div>
</div>