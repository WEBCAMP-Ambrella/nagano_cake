<h2>登録情報編集 <%= resource_name.to_s.humanize %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :family_name,"(姓)" %><br />
    <%= f.text_field :family_name %>
  </div>

  <div class="field">
    <%= f.label :first_name, "(名)" %><br />
    <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name" %>
  </div>

  <div class="field">
    <%= f.label :family_name_kana, "(セイ)" %><br />
    <%= f.text_field :family_name_kana, autofocus: true, autocomplete: "family_name_kana" %>
  </div>
 <div class="field">
    <%= f.label :first_name_kana, "(メイ)" %><br />
    <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana" %>
  </div>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <%= f.fields_for :shipping_address do |i| %>
    <div class="field">
      <%= f.label :postal_code, "郵便番号(ハイフンなし)" %><br />
      <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code" %>
    </div>

    <div class="field">
      <%= f.label :address, "住所" %><br />
      <%= f.text_field :address, autofocus: true, autocomplete: "address" %>
    </div>
  <% end %>

　<div class="field">
    <%= f.label :phone_number, "電話番号(ハイフンなし)" %><br />
    <%= f.text_field :phone_number, autofocus: true, autocomplete: "phone_number" %>
  </div>

  <div class="field">
    <%= f.label :current_password, "パスワード" %><br />
    <%= f.password_field :current_password, autofocus: true %>
  </div>


  <div class="actions">
    <%= f.submit "編集内容を保存する" %>
  </div>
<% end %>


<p><%= button_to "退会する", destroy_customer_path, data: { confirm: "Are you sure?" }, method: :patch %></p>

<%= link_to "Back", :back %>
