<h2>新規会員登録</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :family_name, "(姓)" %><br />
    <%= f.text_field :family_name, autofocus: true, autocomplete: "family_name" %>
  </div>

　<div class="field">
    <%= f.label :first_name, "(名)" %><br />
    <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name" %>
  </div>

　<div class="field">
    <%= f.label :family_name_kana, "(セイ)" %><br />
    <%= f.text_field :family_name_kana, autofocus: true, autocomplete: "family_name_kana" %>
  </div>

  <div class="field">
    <%= f.label :first_name_kana, "(メイ)" %><br />
    <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana" %>
  </div>


  <div class="field">
    <%= f.label :email, "メールアドレス" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <!--配送先モデルへ格納する情報-->
  <%= f.fields_for :shipping_address do |i| %>
    
    <!--宛名無しのテーブルが生まれないよう、hidden_fieldで姓名合体＆登録-->
    <%= f.hidden_field :adressee , :value => "#{family_name + first_name}" %>


    <div class="field">
      <%= f.label :postal_code, "郵便番号(ハイフンなし)" %><br />
      <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code" %>
    </div>

    <div class="field">
      <%= f.label :address, "住所" %><br />
      <%= f.text_field :address, autofocus: true, autocomplete: "address" %>
    </div>
  <% end %>
  <!--配送先モデル関連はここまで-->

　<div class="field">
    <%= f.label :phone_number, "電話番号(ハイフンなし)" %><br />
    <%= f.text_field :phone_number, autofocus: true, autocomplete: "phone_number" %>
  </div>

  <div class="field">
    <%= f.label :password, "パスワード(6文字以上)" %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, "パスワード(確認用)" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "新規登録" %>
  </div>
<% end %>

<h2>既に登録済みの方</h2>
  <div>
　  <p><%= link_to "こちら", new_customer_registration_path %> から新規登録を行ってください。</p>
  </div>

<%= render "customer/customers/shared/links" %>
