<div class = "row">
      <div class="col-md-3">
          <%= render 'customer/items/genre',genres: @genres %>
      </div>



    <div class="col-md-9">
        <%= image_tag'main_cake.jpg', size:'500x400'%>
        <h3>オススメ商品</h3>
        <table class = "table">
        <% @item.each do |item| %>
        <div class = "card">
        <th>
        <%= link_to customer_item_path(item) do %>
              <%= attachment_image_tag item,:image, :fill, 200, 150, fallback: "no_image.jpg" %>
              <p class = "text-secondary"><%= item.name %></p>
              <p class = "text-secondary"><%= (item.non_taxed_price.to_i * 1.1).floor %>円</p>
        </th>
        </div>

        <% end %>
        <% end %>
        </table>
    </div>


</div>
    <div style="text-align : right"><p><%=link_to "もっと見る>", customer_items_path %></p></div>


