<div class = "row">
      <div class="col-md-3">
          ジャンル検索
            <% @genres.each do |genre| %>
            <ul class="list-group">
          <li class="list-group-item">
              <%= link_to genre.name, customer_items_path %></li>
            <% end %>
            </ul>
      </div>



    <div class="col-md-9">
        <%= image_tag'main_cake.jpg', size:'600x500'%>
        <h3>オススメ商品</h3>
        <table class = "table">
        <% @item.each do |item| %>
        <div class = "card">
        <th>
        <%= link_to customer_item_path(item) do %>
              <%= attachment_image_tag item,:image, :fill, 300, 200, fallback: "no_image.jpg" %>
              <p><%= item.name %></p>
              <p><%= (item.non_taxed_price.to_i * 1.1).floor %>円</p>
        </th>
        </div>
        <% end %>
        <% end %>
        </table>
    </div>


</div>
    <div style="text-align : right"><p><%=link_to "もっと見る>", customer_items_path %></p></div>





