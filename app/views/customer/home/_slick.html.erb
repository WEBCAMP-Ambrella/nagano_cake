<div class="slick-box<%= slick_number %>">
  <% items.each do |item| %>
    <%= link_to customer_item_path(item) do %>
      <div class="slick_capsule">
        <div class = "slick_body">
          <div class = "mask">
            <div class ="caption">more..
            </div>
          </div>
          <%= attachment_image_tag item, :image, :fill, 200, 150, fallback: "no_image.jpg", size:"200x150" %>
        </div>
        <p class="mb-0 text-right" style="line-height: 1.2rem;">
          <small><strong><%= item.name %></strong></small><br/>
          <small><strong class="text-primary"><%= yen(item.non_taxed_price.to_i * $tax) %></strong></small><small class="text-muted">(税込)</small>
        </p>
      </div>
    <% end %>
  <% end %>
</div>


<style>
.slick_capsule{
  width :200px;
  max-height: 200px;
}

.slick_body {
  overflow:   hidden;
  position:   relative;
  border-radius: 1rem;
}
.slick_body .caption {
  font-size:    130%;
  color:      #fff;
  padding-top:    60px;
  padding-right:   30px;
}
.slick_body .mask {
  width:      100%;
  height:     100%;
  position:   absolute;
  top:      0;
  left:     0;
  opacity:    0;
  background-color: rgba(0,0,0,.3);
  -webkit-transition: all 0.3s ease-in-out;
  transition:   all 0.3s ease-in-out;
}
.slick_body:hover .mask {
  opacity:    1;
  padding-left:   35%;
}


</style>




<script type="text/javascript">

$('.slick-box<%= slick_number %>').slick({
    prevArrow: '<i class="slide-arrow prev-arrow fas fa-angle-left"></i>',
    nextArrow: '<i class="slide-arrow next-arrow fas fa-angle-right"></i>',
    arrows: true,
    autoplay: false,
    slidesToShow: 4,
    slidesToScroll: 1,
});
</script>