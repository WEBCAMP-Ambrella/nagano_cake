<div class="container">
  <div class="row">
  	<h1><%= genre.name %>一覧画面</h1>
  	<h3>(全<%= @items.count %>件)</h3>
	  	<div class="col-md-3">
			<h4>ジャンル検索</h4>
			<% @genres.each do |genre| %>
			<li>
				<ul>
                  <%= link_to genre.name,search_customer_items_path %>
              </ul>
           </li>
			<% end %>
	    </div>


	    <div class = "col-md-9">
			<% @items.each do |item| %>
			    <%= link_to customer_item_path(item) do %>
				    <tbody>
					    <tr>
					      <%= attachment_image_tag item, :image, :fill, 100, 100, fallback: "no_image.jpg" %>
					      <p><%= item.name %></p>
					      <p><%= item.non_taxed_price %></p>
					    </tr>
				    </tbody>
				<% end %>
			<% end %>

	    </div>
   </div>
</div>
