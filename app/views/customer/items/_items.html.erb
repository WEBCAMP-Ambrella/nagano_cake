<% items.each do |item| %>
  <div class="p-1 float-left" >
    <%= link_to customer_item_path(item) do %>
      <div class = "sample3">
        <div class = "mask">
          <div class ="caption">more..</div>
        </div>
        <%= attachment_image_tag item, :image, :fill, 200, 150, fallback: "no_image.jpg", size:"200x150" %>
      </div>
    <% end %>
    <p class="mb-0 text-right mr-1" style="line-height: 1rem;">
            <small><strong><%= item.name %></strong></small><br/>
            <small><strong class="text-primary"><%= yen(item.non_taxed_price) %></strong></small><small class="text-muted">(税込)</small>
    </p>


    <% if customer_signed_in? %>
    <% if item.liked_by?(item, current_customer) %>
      <%= link_to customer_item_likes_path(item_id: item.id), method: :delete, id:"like-button", remote: true do %>
        <h4 class="fas fa-heart" aria-hidden="true"></h4>
      <% end %>
    <% else %>
      <%= link_to customer_item_likes_path(item_id: item.id, ),method: :post, id:"like-button", remote: true do %>
        <h4 class="far fa-heart text-secondary" aria-hidden="true"></h4>
      <% end %>
    <% end %>
    <% else %>
    <i class="fas fa-heart"></i>
   <% end %>
  </div>
<% end %>


<style>
.sample3 {
  overflow:   hidden;
  position:   relative;
}
.sample3 .caption {
  font-size:    130%;
  color:      #fff;
  padding-top:    60px;
  padding-right:   30px;
}
.sample3 .mask {
  width:      100%;
  height:     100%;
  position:   absolute;
  top:      0;
  left:     0;
  opacity:    0;  /* マスクを表示しない */
  background-color: rgba(0,0,0,.3);
  -webkit-transition: all 0.3s ease-in-out;
  transition:   all 0.3s ease-in-out;
}
.sample3:hover .mask {
  opacity:    1;  /* マスクを表示する */
  padding-left:   35%; /* 右にずらす */
}

</style>
