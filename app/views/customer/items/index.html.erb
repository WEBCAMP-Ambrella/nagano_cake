<h1><%if params[:genre_id].present? %>
       <%= @genre.name %>一覧画面
    <% else %>
       商品一覧画面
    <% end %>
</h1>





<h3>(全<%= @items.count %>件）</h3>
<div class = "row">
  <div class="col-md-3">
    <%= render 'genre',genres: @genres %>
  </div>

    <div class="col-md-9">
      <% @items.each do |item| %>
      <div class= "p-3 float-left">
         <div class="card" style="width: 14rem;">
                    <%= link_to customer_item_path(item) do %>
        				      <%= attachment_image_tag item, :image, :fill, 220, 130, fallback: "no_image.jpg" %>
                        <h5 class = "text-secondary"><%= item.name %></h5>
        			          <h5 class = "text-secondary"><%= item.non_taxed_price %>円</h5>
                    <% end %>
          </div>
        </div>


      <% end %>
      <%= paginate @items,class: "paginate" %>
    </div>
</div>
