<h4><%if params[:genre_id].present? %>
       <%= @genre.name %>一覧画面
    <% else %>
       商品一覧画面
    <% end %>
</h4>





<h5>(全<%= @items.count %>件）</h5>
<div class = "row">
  <div class="col-md-3">
    <%= render 'genre',genres: @genres %>
  </div>

    <div class="col-md-9">
      <% @items.each do |item| %>
          <div class= "p-3 float-left">
                <div class = "item">
                        <%= link_to customer_item_path(item) do %>
            				      <%= attachment_image_tag item, :image, :fill, 200, 150, fallback: "no_image.jpg" %>
                            <span class="glyphicon glyphicon-heart" aria-hidden="true"></span>
                            <h5 class = "text-primary"><%= item.name %></h5>
            			          <h5 class = "text-primary" style="text-align: right;"><%= item.non_taxed_price %>円</h5>
                        <% end %>
                </div>
          </div>
      <% end %>
        <div class="paginate">
         <%= paginate @items,class: "paginate"%>
        </div>
    </div>
</div>

<style>
.item:hover {
  border-radius: 50%;
  opacity: 0.6;
}
.paginate {
  display: inline-block;
  padding-left: 250px;
}
</style>