<div class="container">
  <div class="row">
  	<h1>商品一覧画面</h1>
	  	<div class="col-md-3">
			<%= render 'search',genres: @genres %>
	    </div>


	    <div class = "col-md-9">
			<% @items.each do |item| %>
			    <%= link_to customer_item_path(item) do %>
			    <div class = item>
				    <tbody>
					    <tr>
					      <%= attachment_image_tag item, :image, :fill, 250, 150, fallback: "no_image.jpg" %>
					      <p><%= item.name %></p>
					      <p>¥<%= item.non_taxed_price %></p>
					    </tr>
				    </tbody>
				</div>
				<% end %>
			<% end %>
        </div>
   </div>
</div>

<style>
.item {
	display: inline-block;
}
</style>


