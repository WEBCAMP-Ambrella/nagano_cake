<h1>商品一覧画面</h1>
<h3>(全<%= @items.count %>件）</h3>
<div class = "row">
    <div class="col-md-4">
        <h4>ジャンル検索</h4>
        <% @genres.each do |genre| %>
          <ul>
            <%= link_to genre.name, customer_items_path(genre_id: genre.id) %>
          </ul>
        <% end %>
    </div>

    <div class="col-md-4">
      <% @items.each do |item| %>
         <div class="d-flex flex-row">
            <div class = "card">
                <%= link_to customer_item_path(item) do %>
    				      <%= attachment_image_tag item, :image, :fill, 250, 150, fallback: "no_image.jpg" %>
                    <h5><%= item.name %></h5>
    			          <h5 class="text-right"><%= item.non_taxed_price %>円</h5>

            </div>
            <% end %>
          </div>

      <% end %>
    </div>
    </div>
</div>
