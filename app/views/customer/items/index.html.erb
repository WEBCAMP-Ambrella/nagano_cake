<div class="container">
  <div class="row">
  	<h1>商品一覧画面</h1>
  	<div class="col-md-3">
		<h4>ジャンル検索</h4>
			<% @genres.each do |genre| %>
			    <ul>
			    	<li><%= link_to genre.name, customer_items_path %></li>
			     </ul>
		    <% end %>
    </div>

    <div class = "col-md-9">
		<% @items.each do |item| %>
		    <%= link_to customer_item_path(item) do %>
			    <tbody>
				    <tr>
				      <%= attachment_image_tag item, :image, :fill, 100, 100, fallback: "no_image.jpg" %>
				      <p><%= item.name %></p>
				      <p><%= item.non_taxed_price %></p>
				    </tr>
			    </tbody>
			<% end %>
		<% end %>
	<% paginate @items,class: "paginate" %>
    </div>
   </div>
</div>

