<div class="container">
  <div class="row">
    <h1>商品一覧画面</h1>
    <div class="col-md-3">
      <h4>ジャンル検索</h4>
      <% @genres.each do |genre| %>
        <ul>
          <li><%= link_to genre.name, customer_items_path %></li>
        </ul>
      <% end %>
    </div>

    <div class="col-md-9">
      <% @items.each do |item| %>
        <div class="col-sm-6 col-md-3">
          <div class="thumbnail">
            <%= link_to customer_item_path(item) do %>
				      <%= attachment_image_tag item, :image, :fill, 200, 150, fallback: "no_image.jpg" %>
			        <div class="caption">
                <h5><%= item.name %></h5>
			          <p class="text-right"><%= item.non_taxed_price %>円</p>
              </div>
            <% end %>
          </div>
        </div>
      <% end %>
      <%= paginate @items,class: "paginate" %>
    </div>
  </div>
</div>


