<div class="row">

   <div class="col-md-3">
             ジャンル検索
            <% @genres.each do |genre| %>
            <ul class="list-group">
             <li class="list-group-item">
              <%= link_to genre.name, customer_items_path %></li>
            <% end %>
            </ul>
  </div>
  <div class = "col-md-9">
    <table class = "table">
      <tr>
        <th><%= attachment_image_tag @item,:image, :fill, 300, 200, fallback: "no_image.jpg" %></th>
        <th class="col-md-8">
          <h3><%= @item.name %></h3>
          <h4><%= @item.description %></h4>
          <h3>￥<%= @item.non_taxed_price %> (税込)</h3>


    <% if @item.sale_status == "売り切れ" %>
      <p>現在売切れ中です。</p>
    <% else %>
        <% if customer_signed_in? %>
              <%= form_for(@cart_item, url: customer_cart_items_path) do |f| %>

                  <div class="dropdown">
                    <button class="btn btn-secondary dropdown-toggle"
                      type="button" id="dropdownMenu1" data-toggle="dropdown"
                      aria-haspopup="true" aria-expanded="false">
                      個数選択
                    </button>
                      <div class="dropdown-menu" aria-labelledby="dropdownMenu1">

                  <%= f.select :quantity ,options_for_select($cart_number),include_blank: "個数選択" %>
                    </div>
                  </div>
                    <%= f.select :quantity ,options_for_select($cart_number),include_blank: "個数選択" %>
                  <%= f.hidden_field :customer_id, value: current_customer.id %>
                  <%= f.hidden_field :item_id, value: @item.id %>
                  <button type="submit" class="btn btn-outline-secondary">カートに入れる</button>
              <% end %>
        <% end %>
    <% end %>

     </th>
      </tr>
    </table>
  </div>
</div>

