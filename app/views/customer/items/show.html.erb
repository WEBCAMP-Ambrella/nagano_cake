<div class="row">

   <div class="col-md-3">
      <%= render 'genre',genres: @genres %>
   </div>
  <div class = "col-md-9">
    <table class = "table">
      <tr>
        <th><%= attachment_image_tag @item,:image, :fill, 300, 200, fallback: "no_image.jpg" %></th>
        <th class="col-md-8">
          <h3><%= @item.name %></h3>
          <h4><%= @item.description %></h4>
          <h3>￥<%= @item.non_taxed_price %> (税込)</h3>


    <% if @item.sale_status == "売り切れ" %>
      <p>現在売切れ中です。</p>
    <% else %>
        <% if customer_signed_in? %>
              <%= form_for(@cart_item, url: customer_cart_items_path) do |f| %>
            <div class="input-group mt-5"><%= f.select :quantity ,options_for_select($cart_number), {}, {class:"btn btn-outline-secondary dropdown-toggle"} %>
                  <%= f.hidden_field :customer_id, value: current_customer.id %>
                  <%= f.hidden_field :item_id, value: @item.id %>
                 <button type="submit" class="btn btn-outline-secondary">カートに入れる</button>
           </div>
              <% end %>
        <% end %>
    <% end %>

     </th>
      </tr>
    </table>
  </div>
</div>

