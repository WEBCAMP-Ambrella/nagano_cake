<div class="row">
  <div class="col-md-3">
    <div class="box1">
      <div class="box-title">ジャンル検索</div>
      <ul>
        <% @genres.each do |genre| %>
          <li><%= link_to genre.name, customer_items_path %></li>
        <% end %>
      </ul>
    </div>
  </div>
  <div class="col-md-9">
    <table>
      <tr>
        <th class="col-md-4"><%= attachment_image_tag @item,:image, :fill, 50, 50, fallback: "no_image.jpg" %></th>
        <th class="col-md-8">
          <h3><%= @item.name %></h3>
          <p><%= @item.description %></p>
          <h3>￥<%= @item.non_taxed_price %> (税込)</h3>
        </th>
      </tr>
    </table>
    <% if @item.sale_status == "売り切れ" %>
      <p>現在売切れ中です。</p>
    <% else %>
      <% if customer_signed_in? %>
      <div class="container">
        <div class="row">
          <div class="col-md-4"></div>
          <%= form_for(@cart_item, url: customer_cart_items_path) do |f| %>
          <div class="col-md-4"><%= f.select :quantity ,options_for_select($cart_number),include_blank: "個数選択" %>
          </div>
          <div class="col-md-4">
            <%= f.hidden_field :customer_id, value: current_customer.id %>
            <%= f.hidden_field :item_id, value: @item.id %>
            <%= f.submit "カートに入れる" %>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
    <% end %>
  </div>
</div>
<style>
  .box1 {
    padding: 30px 50px;
    margin:50px 0;
    height:600PX;
    font-weight: normal;
  }
</style>
