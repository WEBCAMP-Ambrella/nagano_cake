<h2>配送先編集</h2>

<%= form_for(@shipping_address, url: customer_shipping_address_path) do |f| %>

  <div class="field">
	<%= f.label :postal_code, "郵便番号(ハイフンなし)" %><br />
	<%= f.text_field :postal_code, value: "#{@shipping_address.postal_code}" %>
  </div>

  <div class="field">
	<%= f.label :address, "住所" %><br />
	<%= f.text_field :address,  value: "#{@shipping_address.address}" %>
  </div>

  <div class="field">
	<%= f.label :addressee, "宛名" %><br />
	<%= f.text_field :addressee, value: "#{@shipping_address.addressee}" %>
  </div>

  <div class="actions">
	<%= f.submit "編集する" %>
  </div>

<% end %>