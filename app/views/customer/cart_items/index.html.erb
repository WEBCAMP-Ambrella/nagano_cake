<h1>ショッピングカート</h1>

<%= link_to "カートを空にする", cart_items_customer_path, method: :delete %>

<table class = "table table-striped">
  <tr>
  	<th>商品名</th>
  	<th>単価（税込）</th>
  	<th>数量</th>
  	<th>小計</th>
  	<th></th>
  </tr>


  <% @cart_items.each do | cart_item | %>

      <tr>
          <th>
            <%= attachment_image_tag cart_item.item , :image, :fill, 50, 50, fallback: "no_image.jpg", style: "width: 50px; height: 50px;" %>
            	<%= cart_item.item.name %>
          </th>
          <th><%= cart_item.item.non_taxed_price %></th>

          <th><%= form_for(cart_item, url: customer_cart_item_path(cart_item)) do |f| %>
                  <%= f.label :quantity %>
                  <%= f.text_field :quantity ,value: "#{cart_item.quantity}"%>
                  <%= f.submit "変更"%>
              <% end %>
        </th>
        <th><%= cart_item.item.non_taxed_price.to_i * cart_item.quantity.to_i %></th>
          <th><%= link_to "削除する", customer_cart_item_path(cart_item), method: :delete %></th>
      </tr>

  <% end %>
</table>

<%= link_to "買い物を続ける", root_path %>

<div>
  <th>合計金額</th>
  <td></td>
</div>
