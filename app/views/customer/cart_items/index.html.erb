<h1>ショッピングカート</h1>

<%= link_to "カートを空にする", cart_items_customer_path, method: :delete %>



  <% @cart_items.each do | cart_item | %>
  <hr/>
  <div class="card border-none mb-3">
    <div class="row no-gutters"style="width: 100%">
    <div style="width: 180px;" >
            <%= attachment_image_tag cart_item.item , :image, :fill, 180, 180, fallback: "no_image.jpg",class:"float-left" %>
          </div>
            <div class="card-body">
            	<h5 class="card-title"><%= cart_item.item.name %></h5>

          <%= form_for(cart_item, url: customer_cart_item_path(cart_item)) do |f| %>
                  <%= f.select :quantity ,options_for_select($cart_number,{selected: cart_item.quantity}) %>
                  <%= f.submit "変更"%>
              <% end %>
        <%= (cart_item.item.non_taxed_price.to_i * cart_item.quantity.to_i * 1.1).floor %>
          <%= link_to "削除する", customer_cart_item_path(cart_item), method: :delete %>
          <p class="text-right">￥<%= (cart_item.item.non_taxed_price.to_i * 1.1).floor %></p>
      </div>
    </div>
  </div>

  <% end %>
<hr/>
<%= link_to "買い物を続ける", root_path %>

<div>
  <th>合計金額</th>
  <td>
    <% @cart_items.each do | cart_item | %>
      <% @total += cart_item.item.non_taxed_price.to_i * cart_item.quantity.to_i %>
    <% end %>
    <%= (@total *1.1).floor %>
  </td>
</div>
