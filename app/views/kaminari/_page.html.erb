<% if page.current? %>
  <li class="page-item active">
    <%= content_tag :a, page, data: { remote: remote }, rel: page.rel, class: 'page-link rounded-circle p-2 px-3 mx-1 text-white' %>
  </li>
<% else %>
  <li class="page-item">
    <%= link_to page, url, remote: remote, rel: page.rel, class: 'page-link rounded-circle p-2 px-3 mx-1' %>
  </li>
<% end %>
