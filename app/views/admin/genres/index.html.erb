<h2>ジャンル一覧・一覧画面</h2>


<%= form_for @genre do |f| %>
<%= form.label :name ,"ジャンル" %> <%= form.text_field :name %>
<label><%= f.radio_button :is_valid, 1 %> 有効</label>
<label><%= f.radio_button :is_valid, 0 %> 無効</label>
<% end %>


<table>
  <tr>
    <th>ジャンル</th>
    <th>状態</th>
  </tr>
  <% @genres.each do | genre | %>
    <tr>
      <td><%= genre.name %></td>
      <td><%= genre.is_valid %></td>
      <td><%= link_to "編集する", edit_admin_genre_path(genre) %></td>
    </tr>
  <% end %>
</table>