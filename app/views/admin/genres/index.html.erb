<div class="row">
  <div class="col-xl">
    <div style="min-height: 8vh;">
      <h3 class="mb-3">ジャンル一覧</h3>


      <%= form_for(@genre, url: admin_genres_path, method: :post) do |f| %>
        <div class="form-group row ml-2">
          <%= f.label :name ,"ジャンル名　", class:"col-form-label" %>
          <%= f.text_field :name %>
          <div class="radio-inline">
          　<%= f.radio_button :is_valid, 1, {checked: true} %>
            <label class="col-form-label">有効　</label>
          </div>
          <div class="radio-inline">
            <%= f.radio_button :is_valid, 0 %>
            <label class="col-form-label">無効　</label>
          </div>
          <%= f.submit '追加', class:"btn btn-sm btn-secondary px-3" %>
        </div>
      <% end %>
    </div>


    <table class="table table-striped">
      <tr>
        <th>ジャンル</th>
        <th>状態</th>
        <th></th>
      </tr>
      <% @genres.each do | genre | %>
        <tr>
          <td><%= genre.name %></td>
          <td><%= genre.is_valid ? :'有効':'無効' %></td>
          <td><%= link_to "編集する", edit_admin_genre_path(genre) %></td>
        </tr>
      <% end %>
    </table>

  </div>
</div>