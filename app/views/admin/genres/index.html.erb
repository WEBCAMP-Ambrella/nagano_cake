<h2>ジャンル追加・一覧画面</h2>


<%= form_for(@genre, url: admin_genres_path, method: :post) do |f| %>
<%= f.label :name ,"ジャンル" %> <%= f.text_field :name %>
<label><%= f.radio_button :is_valid, 1, {checked: true} %> 有効</label>
<label><%= f.radio_button :is_valid, 0 %> 無効</label>
<%= f.submit '追加' %>
<% end %>


<table>
  <tr>
    <th>ジャンル</th>
    <th>状態</th>
  </tr>
  <% @genres.each do | genre | %>
    <tr>
      <td><%= genre.name %></td>
      <td><%= genre.is_valid ? :'有効':'無効' %></td>
      <td><%= link_to "編集する", edit_admin_genre_path(genre) %></td>
    </tr>
  <% end %>
</table>