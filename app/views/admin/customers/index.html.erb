<h2>会員一覧画面</h2>

<table>
      <tr>
        <th>会員ID</th>
        <th>氏名</th>
        <th>メールアドレス</th>
        <th>ステータス</th>
      </tr>
        <% @customers.each do | customer | %>
          <tr>
            <td><%= customer.id %></td>
            <td><%= link_to '@customers.customer.family_name@customers.customer.first_name', admin_customer_path(customer) %></td>
            <td><%= customer.email %></td>
            <td><% customer.is_cancel %></td>
          </tr>
        <% end %>
</table>
