<h2>会員編集画面</h2>

<%= form_for(@customer ,url:admin_customer_path) do |f| %>
会員ID <%= @customer.id %>

氏名
    <%= f.label :family_name %>
    <%= f.text_field :family_name, value:"#{@customer.family_name}" %>
    <%= f.label :first_name %>
    <%= f.text_field :first_name, value:"#{@customer.first_name}" %>
<br/>

フリガナ
    <%= f.label :family_name_kana %>
    <%= f.text_field :family_name_kana, value:"#{@customer.family_name_kana}" %>
    <%= f.label :first_name_kana %>
    <%= f.text_field :first_name_kana, value:"#{@customer.first_name_kana}" %>
<br/>

郵便番号
    <%= f.label :postal_code %>
    <%= f.text_field :postal_code, value:"#{@customer.postal_code}" %>
<br/>

住所
    <%= f.label :address %>
    <%= f.text_field :address, value:"#{@customer.address}" %>
<br/>

電話番号
    <%= f.label :phone_number %>
    <%= f.text_field :phone_number, value:"#{@customer.phone_number}" %>
<br/>

メールアドレス
    <%= f.label :email %>
    <%= f.email_field :email,value:"#{@customer.email}" %>
<br/>

会員ステータス
    <label><%= f.radio_button :is_cancel, 0 ,{:checked => true} %> 有効</label>
    <label><%= f.radio_button :is_cancel, 1 %> 退会済み</label>
<br/>


    <%= f.submit "変更を保存する" %>

<% end %>
