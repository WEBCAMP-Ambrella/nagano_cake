<div class="row">
  <div class="col-xl-7">
    <div style="min-height: 8vh;">
      <h3 class="mb-4">会員編集</h3>
    </div>
    <%= form_for(@customer ,url:admin_customer_path) do |f| %>
    <div class="form-group row">
      <%= f.label :family_name, "氏名", class:"col-sm-3 col-form-label" %>
      <%= f.text_field :family_name, value:"#{@customer.family_name}",class:"col-sm-4" %>
      <%= f.text_field :first_name, value:"#{@customer.first_name}",class:"col-sm-5" %>
    </div>
    <div class="form-group row">
    <%= f.label :family_name_kana, "フリガナ", class:"col-sm-3 col-form-label" %>
    <%= f.text_field :family_name_kana, value:"#{@customer.family_name_kana}", class:"col-sm-4" %>
    <%= f.text_field :first_name_kana, value:"#{@customer.first_name_kana}", class:"col-sm-5" %>
    </div>
    <div class="form-group row">
      <%= f.label :postal_code, "住所", class:"col-sm-3 col-form-label" %>
      <%= f.text_field :postal_code, value:"#{@customer.postal_code}", class:"col-sm-3" %>
      <%= f.text_field :address, value:"#{@customer.address}", class:"col-sm-6" %>
    </div>
    <div class="form-group row">
      <%= f.label :phone_number, "電話番号", class:"col-sm-3 col-form-label" %>
      <%= f.text_field :phone_number, value:"#{@customer.phone_number}", class:"col-sm-9" %>
    </div>
    <div class="form-group row">
      <%= f.label :email, "メールアドレス", class:"col-sm-3 col-form-label" %>
      <%= f.email_field :email,value:"#{@customer.email}", class:"col-sm-9" %>
    </div>
    <div class="form-group row">
      <p class="col-sm-3 col-form-label">会員ステータス</p>
      <div class="radio-inline col-sm-3">
        <%= f.radio_button :is_cancel, 0 ,{:checked => true} %>
        <label class="col-form-label"> 有効会員</label>
      </div>
      <div class="radio-inline col-sm-3">
        <%= f.radio_button :is_cancel, 1 %>
        <label class="col-form-label"> 退会済み会員</label>
      </div>
    </div>
    <div class="form-group row">
      <%= f.submit "変更を保存する", class:"btn btn-secondary text-white", style:"margin:0 auto;" %>
    </div>
  <% end %>
  </div>
</div>