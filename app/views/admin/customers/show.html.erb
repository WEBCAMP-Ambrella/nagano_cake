<h4>会員詳細画面</h4>

<table class = "table table-borderless">
  <tr>
    <th>顧客ID</th>
  	<td><%= @customer.id %></td>
  	  <% if @customer.is_cancel == false %>
  	   <p><span class="badge badge-primary">有効会員</span></p>
  	  <% else %>
  	    <p><span class="badge badge-danger">無効会員</span></p>
  	  <% end %>
  </tr>
  <tr>
    <th width="200">氏名</th>
  	<td><%= @customer.family_name + @customer.first_name %></td>
  </tr>
  <tr>
  	<th>カナ</th>
  	<td><%= @customer.family_name_kana + @customer.first_name_kana %></td>
  </tr>
  <tr>
  	<th>郵便番号</th>
  	<td><%= @customer.postal_code %></td>
  </tr>
  <tr>
  	<th>住所</th>
  	<td><%= @customer.address %></td>
  </tr>
  <tr>
  	<th>電話番号</th>
  	<td><%= @customer.phone_number %></td>
  </tr>
  <tr>
  	<th>メールアドレス</th>
  	<td><%= @customer.email %></td>
  </tr>
</table>

<div class="btn">
<%= link_to "編集する", edit_admin_customer_path(@customer), class: "btn btn-primary btn-sm" %>

<%= link_to "注文履歴一覧を見る", admin_orders_path(customer_id: @customer.id), class: "btn btn-primary btn-sm" %>
</div>





<style>

.btn{
 margin:10px;
}
.table th:nth-child(odd){
  font-weight: normal;
}

</style>










