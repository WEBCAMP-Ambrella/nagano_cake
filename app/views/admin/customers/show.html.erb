<div class="row">
  <div class="col-xl-7">
    <div style="min-height: 8vh;">
      <h3 class="mb-3">会員詳細</h3>
  	  <% if @customer.is_cancel == false %>
  	   <p><span class="ml-2 badge badge-pill badge-success">有効会員</span></p>
  	  <% else %>
  	    <p><span class="ml-2 badge badge-pill badge-danger">無効会員</span></p>
  	  <% end %>
    </div>

    <table class = "table">
      <tr>
        <th style="width: 30%;">会員ID</th>
      	<th style="width: 70%;"><%= @customer.id %></th>
      </tr>
      <tr>
        <th width="200">氏名</th>
      	<th><%= @customer.family_name + "　" + @customer.first_name %></th>
      </tr>
      <tr>
      	<th>カナ</th>
      	<th><%= @customer.family_name_kana + "　" + @customer.first_name_kana %>
        </th>
      </tr>
      <tr>
      	<th>郵便番号</th>
      	<th><%= post_code(@customer.postal_code) %></th>
      </tr>
      <tr>
      	<th>住所</th>
      	<th><%= @customer.address %></th>
      </tr>
      <tr>
      	<th>電話番号</th>
      	<th><%= @customer.phone_number %></th>
      </tr>
      <tr>
      	<th>メールアドレス</th>
      	<th><%= @customer.email %></th>
      </tr>
    </table>

    <div class="btn">
      <%= link_to "編集する", edit_admin_customer_path(@customer), class: "btn btn-secondary btn-sm" %>

      <%= link_to "注文履歴一覧を見る", admin_orders_path(customer_id: @customer.id), class: "btn btn-secondary btn-sm" %>
    </div>
  </div>
</div>