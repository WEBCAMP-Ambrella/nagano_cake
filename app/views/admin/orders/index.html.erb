<h2>注文一覧画面</h2>

<% if @orders.empty? %>
  注文履歴はありません。
<% else %>
  <table>
    <tr>
      <th>購入日時</th>
      <th>購入者</th>
      <th>注文個数</th>
      <th>注文ステータス</th>
    </tr>
    <% @orders.each do | order | %>
      <tr>
        <td><%= link_to order.created_at, admin_order_path(order) %></td>
        <td><%= order.customer.first_name %></td>
        <td><%= order.order_items.count %></td>
        <td><%= order.order_status %></td>
      </tr>
    <% end %>
  </table>
<% end %>