<div class="row">
  <div class="col-xl">
    <div style="min-height: 8vh;">
      <h3 class="mb-4">商品詳細</h3>
    </div>



  <div class="row">
	<div class="col-md-4">
<%= attachment_image_tag @item, :image, :fill, 300, 300, fallback: "no_image.jpg", size:'300x300' %>
</div>
<div class="col-md-8">
	<table class="table">
		<tr>
			<th style="width: 20%;">商品名</th>
			<td style="width: 80%;"><%= @item.name %></td>
		</tr>
		<tr>
			<th>ジャンル</th>
			<td><%= @item.genre.name %></td>
		</tr>
		<tr>
			<th>税抜価格</th>
			<td><%= yen(@item.non_taxed_price.to_i) %></td>
		</tr>
			<th>税込価格</th>
			<td>
			<%= yen((@item.non_taxed_price.to_i * 1.1).floor) %></td>
		</tr>
		<tr>
			<th>販売ステータス</th>
			<td><%= @item.sale_status %></td>
		</tr>
		<tr>
			<th>商品説明</th>
			<td><%= @item.description %></td>
		</tr>
	</table>



<%= link_to "編集する",edit_admin_item_path(@item), class:"btn btn-secondary" %>

</div>
</div>

</div>
</div>