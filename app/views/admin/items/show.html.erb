<h3>商品　詳細画面<h3>


<%= attachment_image_tag @item, :image, :fill, 300, 300, fallback: "no_image.jpg" %>

<table class = "table table-striped">
	<thead>
		<tr>
			<th>商品名</th>
				<td><%= @item.name %></td>
		</tr>
		<tr>
			<th>商品説明</th>
				<td><%= @item.description %></td>
		</tr>
		<tr>
			<th>ジャンル</th>
				<td><%= @item.genre_id %></td>
		</tr>
		<tr>
			<th>税込価格（税抜価格）</th>
				<td><%= @item.non_taxed_price %></td>
		</tr>
		<tr>
			<th>販売ステータス</th>
				<td><%= @item.sale_status %></td>
		</tr>
	</thead>
</table>

<%= link_to "編集する",edit_admin_item_path(@item) %>