<h1>商品　新規登録画面</h1>


<%= form_for(@item, url: admin_items_path) do |f| %>
　　<label>Image</label>
 　<div><%= f.attachment_field :image %></div>
  <br/>

　商品名
  <%= f.label :name %>
  <%= f.text_field :name, autofocus: true, class:"form-control", id:"inputEmail", placeholder:"名前"%>
    <span class="fa fa-user form-control-icon" aria-hidden="true"></span>
  <br/>

  商品説明
  <%= f.label :description %>
  <%= f.text_field :description,autofocus: true, class:"form-control", id:"inputEmail",placeholder:"自己紹介"%>
  <br/>

  ジャンル
  <%= f.label :genre_id %>
  <%= f.select :genre_id,[["Genre.first.name", 1], ["Genre.second.name", 2]], include_blank: "選択して下さい" %>
  <br/>

  税抜価格
  <%= f.label :non_taxed_price %>
  <%= f.text_field :non_taxed_price,autofocus: true, class:"form-control", id:"inputEmail",placeholder:"自己紹介"%>
  <br/>

  販売ステータス
  <%= f.select :sale_status, [["売り切れ", 0], ["販売中", 1]], include_blank: "選択して下さい" %>
  <br/>

  <%= f.submit "新規登録", class:"btn btn-lg btn-block btn-base-1 mt-20" %>

<% end %>