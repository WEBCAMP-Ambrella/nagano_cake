<h1>商品 新規登録画面</h1>


<%= form_for(@item, url: admin_items_path, method: :post) do |f| %>
 <label>Image</label>
   <div><%= f.attachment_field :image %></div>
  <br/>

  商品名
  <%= f.label :name %>
  <%= f.text_field :name %>
  <br/>

  商品説明
  <%= f.label :description %>
  <%= f.text_field :description %>
  <br/>

  ジャンル
  <%= f.label :genre_id %>
  <%= f.collection_select(:genre_id, @genres, :id, :name) %>
  <br/>

  税抜価格
  <%= f.label :non_taxed_price %>
  <%= f.text_field :non_taxed_price %>
  <br/>

  販売ステータス
  <%= f.label :sale_status %>
   <%= f.select :sale_status, [[:販売中],[:売り切れ]]  %>
  <br/>

  <%= f.submit "新規登録", class:"btn btn-lg btn-block btn-base-1 mt-20" %>

<% end %>