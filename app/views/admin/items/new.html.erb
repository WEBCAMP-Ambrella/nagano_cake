<h1>商品　新規登録画面</h1>


<%= form_for(@item, url:admin_items_path,metod: :post) do |f| %>
　　<label>Image</label>
 　<div><%= f.attachment_field :image %></div>
  <br/>

　商品名
  <%= f.label :name %>
  <%= f.text_field :name　%>
    <span class="fa fa-user form-control-icon" aria-hidden="true"></span>
  <br/>

  商品説明
  <%= f.label :description %>
  <%= f.text_field :description %>
  <br/>

  ジャンル
  <%= f.label :genre %>
  <%= f.collection_select(:genre_id, Genre.all, :id, :name),{include_blank: "選択して下さい"} %>

  <br/>

  税抜価格
  <%= f.label :non_taxed_price %>
  <%= f.text_field :non_taxed_price,%>
  <br/>

  販売ステータス
  <%= f.label :sale_status %>
  <%= f.collection_select(:sale_status, Sale_status.all, :id, :name),{include_blank: "選択して下さい"} %>
  <br/>

  <%= f.submit "新規登録", class:"btn btn-lg btn-block btn-base-1 mt-20" %>

<% end %>