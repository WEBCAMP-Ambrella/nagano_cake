<div class="row">
  <div class="col-xl">
    <div style="min-height: 8vh;">
      <h3 class="mb-4">商品編集</h3>
    </div>

<%= form_for(@item , url: admin_item_path(@item)) do |f| %>
<div class="row">
<div class="col-md-4">
  <%= attachment_image_tag @item, :image, :fill, 300, 300, fallback: "no_image.jpg", size:'300x300' %>
  <%= f.attachment_field :image %>
</div>
<div class="col-md-8">
<div>
  <div class="field">
	<%= f.label :name, "商品名" %><br />
	<%= f.text_field :name, value: "#{@item.name}" %>
  </div>

  <div class="field">
	<%= f.label :description, "商品説明" %><br />
	<%= f.text_area :description,  value: "#{@item.description}" %>
  </div>

  <div class="field">
	<%= f.label :genre_id, "ジャンル" %><br />
	<%= f.collection_select(:genre_id, @genres, :id, :name) %>
  </div>

  <div class="field">
	<%= f.label :non_taxed_price, "税抜き価格" %><br />
	<%= f.text_field :non_taxed_price,  value: "#{@item.non_taxed_price}" %>
  </div>

  <div class="field">
	<%= f.label :sale_status, "販売ステータス" %><br />
	<%= f.select :sale_status, [[:売り切れ], [:販売中]] %>
  </div>

  <!--販売ステータスについては定義次第、書き換え予定-->

  <div class="actions">
	<%= f.submit "変更を保存" %>
  </div>
</div>

<% end %>

